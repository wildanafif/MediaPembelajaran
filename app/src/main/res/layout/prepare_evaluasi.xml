<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_soal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Media Pembelajaran"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="10dp" >
        <TextView
            android:background="#ddd"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_prepare"
            android:text="Anda akan melakukan evaluasi, untuk memulai evaluasi silahkan klik tombol start dibawah ini"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/mualai"
        android:text="Start"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/status_skor"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Skor Anda"
            android:textSize="20dp"
            />
        <TextView
            android:background="#ddd"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skor"
            android:text="100"
            android:gravity="center"
            android:textSize="40dp"
            />

        <TextView
            android:background="#ddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pesan_skor"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Selamat Anda berhasil menguasai materi ini"
            />
    </LinearLayout>


</LinearLayout>